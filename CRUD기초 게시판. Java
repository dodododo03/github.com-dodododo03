import java.util.*;

class Post {
    int id;
    String title;
    String content;

    Post(int id, String title, String content) {
        this.id = id;
        this.title = title;
        this.content = content;
    }
}

public class crud {  //
    static Scanner sc = new Scanner(System.in);
    static List<Post> posts = new ArrayList<>();
    static int postId = 1;

    public static void main(String[] args) {
        while (true) {
            System.out.println("\n==== 게시판 메뉴 ====");
            System.out.println("1. 글쓰기");
            System.out.println("2. 글목록");
            System.out.println("3. 글수정");
            System.out.println("4. 글삭제");
            System.out.println("0. 종료");
            System.out.print("선택: ");
            int menu = sc.nextInt();
            sc.nextLine();

            switch (menu) {
                case 1: createPost(); break;
                case 2: readPosts(); break;
                case 3: updatePost(); break;
                case 4: deletePost(); break; // ← 여기서 deletePost 호출
                case 0: System.out.println("종료합니다~"); return;
                default: System.out.println("잘못된 선택!");
            }
        }
    }

    static void createPost() {
        System.out.print("제목: ");
        String title = sc.nextLine();
        System.out.print("내용: ");
        String content = sc.nextLine();
        posts.add(new Post(postId++, title, content));
        System.out.println("글이 등록되었습니다!");
    }

    static void readPosts() {
        if (posts.isEmpty()) {
            System.out.println("등록된 글이 없습니다.");
            return;
        }
        for (Post p : posts) {
            System.out.println(p.id + ". " + p.title + " - " + p.content);
        }
    }

    static void updatePost() {
        System.out.print("수정할 글 번호: ");
        int id = sc.nextInt();
        sc.nextLine();

        for (Post p : posts) {
            if (p.id == id) {
                System.out.print("새 제목: ");
                p.title = sc.nextLine();  
                System.out.print("새 내용: ");
                p.content = sc.nextLine();
                System.out.println("수정 완료!");
                return;
            }
        }
        System.out.println("해당 번호의 글이 없습니다.");
    }

    static void deletePost() {   // ← 이 메소드가 반드시 있어야 함
        System.out.print("삭제할 글 번호: ");
        int id = sc.nextInt();
        sc.nextLine();

        Iterator<Post> it = posts.iterator();
        while (it.hasNext()) {
            Post p = it.next();
            if (p.id == id) {
                it.remove();
                System.out.println("삭제 완료!");
                return;
            }
        }
        System.out.println("해당 번호의 글이 없습니다.");
    }
}
